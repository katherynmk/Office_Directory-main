        body {
          font-family: 'Poppins', sans-serif;
          background-color: #7a1111;
          color: #fdfdfd;
        }
    
        .card {
          max-width: 512px;
          margin: 350px auto 0;
          background-color: #ffffff;
          box-shadow: 0 10px 90px #00000024;
          text-align: center;
          font-size: 20px;
          border-radius: 15px;
          position: center;
        }
    
        .card .card-header {
          height: 128px;
          position: center;
        }
    
        .card .card-header .prof-pic {
          width: 256px;
          height: 256px;
          border-radius: 1000px;
          position: absolute;
          left: 50%;
          transform: translate(-50%, -50%);
          border: 8px solid #000000;
          box-shadow: 0 0 20px #00000033;
        }
    
        .card .card-header .prof-pic:hover {
          width: 180px;
          height: 180px;
          border: 8px solid #7a1111;
        }
    
        .card .card-body {
          padding: 10px 40px;
        }
    
        .card .card-body .prof-name {
          margin-top: 30px;
          font-size: 24px;
          font-weight: bold;
          color: #000000;
        }
    
        .card .card-body .prof-name:hover {
          margin-top: 30px;
          font-size: 26px;
          color: #7a1111;
        }
    
        .card .card-body .mail {
          font-size: 14px;
          color: #000000;
        }
    
        .card .card-body .mail:hover {
          font-size: 16px;
          color: #7a1111;
        }
    
        .card .card-body .office-hours {
          margin-top: 10px;
          font-size: 20px;
          color: #000000;
        }
    
        
        .card .card-footer {
            background-color: #0d0909;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
            padding: 20px 0 20px 0;
            
        }
    
        .card .card-footer .count {
            font-size: 14px;
            margin-bottom: 30px;
        }
    
